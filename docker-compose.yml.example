services:
  # PostgreSQL - Shared database server
  postgres:
    image: postgres:18.1
    container_name: postgres-main
    environment:
      POSTGRES_USER: postgres  # test password for now
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: postgres
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./init-db.sql:/docker-entrypoint-initdb.d/init-db.sql
    networks:
      - microservices-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Redis
  redis:
    image: redis:8.4.0
    container_name: redis-cache
    ports:
      - "6379:6379"
    networks:
      - microservices-network

  # RabbitMQ
  rabbitmq:
    image: rabbitmq:4.2.1
    container_name: rabbitmq-broker
    ports:
      - "5672:5672"   # AMQP
      - "15672:15672" # Management UI
    environment:
      RABBITMQ_DEFAULT_USER: admin
      RABBITMQ_DEFAULT_PASS: admin
    networks:
      - microservices-network

  # API Gateway
  api-gateway:
    build: ./api-gateway
    container_name: api-gateway
    ports:
      - "8080:8080"
    environment:
      - SPRING_PROFILES_ACTIVE=docker
      - AUTH_SERVICE_URL=http://auth-service:8081
      - USER_SERVICE_URL=http://user-service:8082
      - RESOURCE_SERVICE_URL=http://resource-service:8083
      - BOOKING_SERVICE_URL=http://booking-service:8084
      - MARKETPLACE_SERVICE_URL=http://marketplace-service:8085
      - PAYMENT_SERVICE_URL=http://payment-service:8086
      - EXAM_SERVICE_URL=http://exam-service:8087
      - NOTIFICATION_SERVICE_URL=http://notification-service:8088
      - IOT_SERVICE_URL=http://iot-service:8089
      - TRACKING_SERVICE_URL=http://tracking-service:8090
      - REDIS_HOST=redis
      - REDIS_PORT=6379
      - JWT_SECRET=your-jwt-secret-change-in-production
      - INTERNAL_API_SECRET=gateway-to-services-secret-123
    depends_on:
      - redis
      - auth-service
    networks:
      - microservices-network

  # Auth Service
  auth-service:
    build: ./auth-service
    container_name: auth-service
    environment:
      - SPRING_PROFILES_ACTIVE=docker
      - DB_URL=jdbc:postgresql://postgres:5432/authdb
      - DB_USERNAME=auth_user
      - DB_PASSWORD=auth_pass
      - JWT_SECRET=your-jwt-secret-change-in-production
      - INTERNAL_API_SECRET=gateway-to-services-secret-123
    depends_on:
      postgres:
        condition: service_healthy
    networks:
      - microservices-network

  # User Service
  user-service:
    build: ./user-service
    container_name: user-service
    environment:
      - SPRING_PROFILES_ACTIVE=docker
      - DB_URL=jdbc:postgresql://postgres:5432/userdb
      - DB_USERNAME=user_user
      - DB_PASSWORD=user_pass
      - RABBITMQ_HOST=rabbitmq
      - RABBITMQ_PORT=5672
      - RABBITMQ_USERNAME=admin
      - RABBITMQ_PASSWORD=admin
      - INTERNAL_API_SECRET=gateway-to-services-secret-123
    depends_on:
      postgres:
        condition: service_healthy
      rabbitmq:
        condition: service_started
    networks:
      - microservices-network

  # Resource Service
  resource-service:
    build: ./resource-service
    container_name: resource-service
    environment:
      - SPRING_PROFILES_ACTIVE=docker
      - DB_URL=jdbc:postgresql://postgres:5432/resourcedb
      - DB_USERNAME=resource_user
      - DB_PASSWORD=resource_pass
      - RABBITMQ_HOST=rabbitmq
      - INTERNAL_API_SECRET=gateway-to-services-secret-123
    depends_on:
      postgres:
        condition: service_healthy
      rabbitmq:
        condition: service_started
    networks:
      - microservices-network

  # Booking Service
  booking-service:
    build: ./booking-service
    container_name: booking-service
    environment:
      - SPRING_PROFILES_ACTIVE=docker
      - DB_URL=jdbc:postgresql://postgres:5432/bookingdb
      - DB_USERNAME=booking_user
      - DB_PASSWORD=booking_pass
      - RABBITMQ_HOST=rabbitmq
      - INTERNAL_API_SECRET=gateway-to-services-secret-123
    depends_on:
      postgres:
        condition: service_healthy
      rabbitmq:
        condition: service_started
    networks:
      - microservices-network

  # Marketplace Service
  marketplace-service:
    build: ./marketplace-service
    container_name: marketplace-service
    environment:
      - SPRING_PROFILES_ACTIVE=docker
      - DB_URL=jdbc:postgresql://postgres:5432/marketplacedb
      - DB_USERNAME=marketplace_user
      - DB_PASSWORD=marketplace_pass
      - RABBITMQ_HOST=rabbitmq
      - INTERNAL_API_SECRET=gateway-to-services-secret-123
    depends_on:
      postgres:
        condition: service_healthy
      rabbitmq:
        condition: service_started
    networks:
      - microservices-network

  # Payment Service
  payment-service:
    build: ./payment-service
    container_name: payment-service
    environment:
      - SPRING_PROFILES_ACTIVE=docker
      - DB_URL=jdbc:postgresql://postgres:5432/paymentdb
      - DB_USERNAME=payment_user
      - DB_PASSWORD=payment_pass
      - RABBITMQ_HOST=rabbitmq
      - INTERNAL_API_SECRET=gateway-to-services-secret-123
    depends_on:
      postgres:
        condition: service_healthy
      rabbitmq:
        condition: service_started
    networks:
      - microservices-network

  # Exam Service
  exam-service:
    build: ./exam-service
    container_name: exam-service
    environment:
      - SPRING_PROFILES_ACTIVE=docker
      - DB_URL=jdbc:postgresql://postgres:5432/examdb
      - DB_USERNAME=exam_user
      - DB_PASSWORD=exam_pass
      - RABBITMQ_HOST=rabbitmq
      - NOTIFICATION_SERVICE_URL=http://notification-service:8088
      - INTERNAL_API_SECRET=gateway-to-services-secret-123
    depends_on:
      postgres:
        condition: service_healthy
      rabbitmq:
        condition: service_started
    networks:
      - microservices-network

  # Notification Service
  notification-service:
    build: ./notification-service
    container_name: notification-service
    environment:
      - SPRING_PROFILES_ACTIVE=docker
      - DB_URL=jdbc:postgresql://postgres:5432/notificationdb
      - DB_USERNAME=notification_user
      - DB_PASSWORD=notification_pass
      - RABBITMQ_HOST=rabbitmq
      - SMTP_HOST=${SMTP_HOST:-smtp.gmail.com}
      - SMTP_PORT=${SMTP_PORT:-587}
      - SMTP_USERNAME=${SMTP_USERNAME:-}
      - SMTP_PASSWORD=${SMTP_PASSWORD:-}
      - INTERNAL_API_SECRET=gateway-to-services-secret-123
    depends_on:
      postgres:
        condition: service_healthy
      rabbitmq:
        condition: service_started
    networks:
      - microservices-network

  # IoT Service (uses TimescaleDB)
  timescaledb:
    image: timescale/timescaledb:latest-pg15
    container_name: timescaledb
    environment:
      POSTGRES_USER: iot_user
      POSTGRES_PASSWORD: iot_pass
      POSTGRES_DB: iotdb
    ports:
      - "5441:5432"
    volumes:
      - timescale_data:/var/lib/postgresql/data
    networks:
      - microservices-network

  iot-service:
    build: ./iot-service
    container_name: iot-service
    environment:
      - SPRING_PROFILES_ACTIVE=docker
      - DB_URL=jdbc:postgresql://timescaledb:5432/iotdb
      - DB_USERNAME=iot_user
      - DB_PASSWORD=iot_pass
      - RABBITMQ_HOST=rabbitmq
      - INTERNAL_API_SECRET=gateway-to-services-secret-123
    depends_on:
      - timescaledb
      - rabbitmq
    networks:
      - microservices-network

  # Tracking Service
  tracking-service:
    build: ./tracking-service
    container_name: tracking-service
    environment:
      - SPRING_PROFILES_ACTIVE=docker
      - DB_URL=jdbc:postgresql://postgres:5432/trackingdb
      - DB_USERNAME=tracking_user
      - DB_PASSWORD=tracking_pass
      - RABBITMQ_HOST=rabbitmq
      - INTERNAL_API_SECRET=gateway-to-services-secret-123
    depends_on:
      postgres:
        condition: service_healthy
      rabbitmq:
        condition: service_started
    networks:
      - microservices-network

networks:
  microservices-network:
    driver: bridge

volumes:
  postgres_data:
  timescale_data:
